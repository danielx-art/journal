<button
  id="theme-toggle"
  aria-label="Toggle theme"
  class="relative bg-transparent rounded-md p-2 cursor-pointer
         transition-all duration-300 backdrop-blur-sm w-8 h-8
         flex items-center justify-center text-text/60 hover:text-text/100"
>
  <svg
    id="icon-sun"
    class="absolute w-5 h-5 transition-all duration-300 opacity-0 rotate-180"
    fill="currentColor"
    viewBox="0 0 20 20"
  >
    <path
      fill-rule="evenodd"
      d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
      clip-rule="evenodd"></path>
  </svg>

  <svg
    id="icon-moon"
    class="absolute w-5 h-5 transition-all duration-300 opacity-100 rotate-0"
    fill="currentColor"
    viewBox="0 0 20 20"
  >
    <path
      d="M17.293 13.293A8 8 0 016.707 2.707
         a8.001 8.001 0 1010.586 10.586z"
    ></path>
  </svg>
</button>

<script>
  const btn = document.getElementById("theme-toggle");
  const sun = document.getElementById("icon-sun");
  const moon = document.getElementById("icon-moon");

  function applyTheme(theme: "light" | "dark") {
    if (!sun || !moon) {
      return;
    }

    if (theme === "dark") {
      document.documentElement.setAttribute("data-theme", "dark");
      localStorage.setItem("theme", "dark");
      sun.classList.remove("opacity-100", "rotate-0");
      sun.classList.add("opacity-0", "rotate-180");
      moon.classList.remove("opacity-0", "-rotate-180");
      moon.classList.add("opacity-100", "rotate-0");
    } else {
      document.documentElement.setAttribute("data-theme", "light");
      localStorage.setItem("theme", "light");
      sun.classList.remove("opacity-0", "rotate-180");
      sun.classList.add("opacity-100", "rotate-0");
      moon.classList.remove("opacity-100", "rotate-0");
      moon.classList.add("opacity-0", "-rotate-180");
    }
  }

  if (btn) {
    btn.addEventListener("click", () => {
      const current = document.documentElement.getAttribute("data-theme");
      applyTheme(current === "dark" ? "light" : "dark");
    });
  }
</script>
