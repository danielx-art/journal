---
import type { Lang, Translation } from "../types";

interface Props {
  currentLang: Lang;
  translation?: Translation;
}

const { currentLang, translation } = Astro.props;
---

{
  translation && (
    <nav class="mt-6 text-end text-neutral text-sm">
      <p>
        {currentLang === "en" ? "Leia em " : "Read in "}
        <a
          class="text-neutral hover:text-accent transition-all duration-[150ms] underline"
          href={`/journal/${translation.lang}/posts/${translation.slug}${Astro.url.search}`}
        >
          {currentLang === "en" ? "PortuguÃªs" : "English"}
        </a>.  <!-- due to html white space weird parsing, the final dot must be juxtaposed with the closing a tag, not in the line bellow, because then there would be a blank space before the final dot -->
      </p>
    </nav>
  )
}
